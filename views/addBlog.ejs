<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("./partials/head.ejs") %>
        <title>Create Amazing Blog - Blogify</title>
    </head>
    <body
        class="min-h-screen bg-gradient-to-br from-gray-900 via-purple-900 to-violet-900 text-white"
    >
        <%- include("./partials/nav.ejs") %>

        <div class="container mx-auto px-4 py-12">
            <div class="max-w-4xl mx-auto">
                <!-- Header -->
                <div class="text-center mb-12" data-aos="fade-up">
                    <h1
                        class="m-4 p-4 text-5xl font-bold mb-4 bg-gradient-to-r from-yellow-400 via-red-500 to-pink-500 bg-clip-text text-transparent"
                    >
                        Create Your Masterpiece
                    </h1>
                    <p class="text-xl text-gray-300">
                        Share your story with the world
                    </p>
                </div>

                <!-- Form -->
                <div
                    class="glass-effect rounded-2xl p-8 shadow-2xl"
                    data-aos="fade-up"
                    data-aos-delay="200"
                >
                    <form
                        action="/blog"
                        method="post"
                        enctype="multipart/form-data"
                        class="space-y-8"
                    >
                        <!-- Cover Image -->
                        <div class="space-y-2">
                            <label
                                for="coverImage"
                                class="block text-lg font-semibold text-purple-300"
                            >
                                <i class="fas fa-image mr-2"></i>Cover Image
                            </label>
                            <div class="relative">
                                <input
                                    type="file"
                                    id="coverImage"
                                    name="coverImage"
                                    accept="image/*"
                                    class="w-full p-4 bg-gray-800 bg-opacity-50 border-2 border-dashed border-gray-600 rounded-xl text-white file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:bg-purple-500 file:text-white hover:file:bg-purple-600 file:cursor-pointer focus:border-purple-400 focus:ring-2 focus:ring-purple-400 focus:outline-none transition-all duration-300"
                                />
                            </div>
                        </div>

                        <!-- Title -->
                        <div class="space-y-2">
                            <label
                                for="title"
                                class="block text-lg font-semibold text-purple-300"
                            >
                                <i class="fas fa-heading mr-2"></i>Title
                            </label>
                            <input
                                type="text"
                                id="title"
                                name="title"
                                required
                                placeholder="Enter an amazing title..."
                                class="w-full p-4 bg-gray-800 bg-opacity-50 border border-gray-600 rounded-xl text-white placeholder-gray-400 focus:border-purple-400 focus:ring-2 focus:ring-purple-400 focus:outline-none transition-all duration-300"
                            />
                        </div>

                        <!-- Body -->
                        <div class="space-y-2">
                            <label
                                for="body"
                                class="block text-lg font-semibold text-purple-300"
                            >
                                <i class="fas fa-edit mr-2"></i>Content
                            </label>
                            <textarea
                                id="body"
                                name="body"
                                required
                                rows="12"
                                placeholder="Tell your story..."
                                class="w-full p-4 bg-gray-800 bg-opacity-50 border border-gray-600 rounded-xl text-white placeholder-gray-400 focus:border-purple-400 focus:ring-2 focus:ring-purple-400 focus:outline-none transition-all duration-300 resize-y"
                            ></textarea>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center pt-6">
                            <button
                                type="submit"
                                class="bg-gradient-to-r from-purple-500 to-pink-500 text-white px-12 py-4 rounded-full text-lg font-semibold hover:from-purple-600 hover:to-pink-600 transition-all duration-300 transform hover:scale-105 glow animate__animated animate__pulse animate__infinite"
                            >
                                <i class="fas fa-rocket mr-2"></i>Publish Blog
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <%- include("./partials/scripts.ejs") %>
    </body>
</html>
